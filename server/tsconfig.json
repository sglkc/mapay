{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "../dist/server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "paths": {
      "~/types/*": ["../types/*.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

