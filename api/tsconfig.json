{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "../dist/api",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node",
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

